<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our handpicked campgrounds from all over the world</p>
			<p>
				<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campground</a>
			</p>
		</div>
	</header>


	<div class="row text-center">
		<div class="col-lg-12">
			<h3 class="text-center">Our most Popular Campgrounds!</h3>
		</div>

		<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-6">

		<div class="thumbnail">
			<img src="<%=campground.image%>"  style="height: 140px;width:100%;">
			<!-- campground.image won't give us "http...." it will rather give us http... It won't be a string. When we add it to our template the quotes don't come along with it 
			Even if we remove the quotes the images do get loaded (Weird..)-->

			<div class="caption">
				<h4> <%= campground.name %></h4>
			</div>

			<p>
				<!-- _id is present inside the mongodb created by mongodb. It refers to individual campground. So to take us to that campground we need that id -->
				<a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
			</p>
		</div>
		
		
		

		</div>
	<%	}); %>
	</div>



	
</div>


<%- include("../partials/footer") %>
