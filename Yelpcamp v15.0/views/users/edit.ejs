<%- include("../partials/header")%>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit Profile</h1>

		<div style="width:30%; margin:30px auto">
			<form action="/users/<%= user._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="user[firstName]" value="<%=user.firstName%>" readonly>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="user[lastName]" value="<%=user.lastName%>" readonly>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="user[username]" value="<%=user.username%>" readonly>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="user[email]" value="<%=user.email%>" readonly>
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="user[bio]" value="<%=user.bio%>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="user[userPic]" value="<%=user.userPic%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back!</a> 

		</div>
		

	</div>

</div>



<%- include("../partials/footer")%>



