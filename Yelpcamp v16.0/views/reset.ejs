<%- include("./partials/header") %>


<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Reset Password</h1>

		<div class="form">
			<form action="/reset/<%= token %>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="password" required name="password" placeholder="New Password">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" required name="confirm" placeholder="Confirm Password">
                </div>
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update Password">
            </form>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>

